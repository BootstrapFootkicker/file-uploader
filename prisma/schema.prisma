// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text // MediumText may be needed for MySql
  expiresAt DateTime
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  userName  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  folder folder[]
  file   file[] // <-- Add this line
}

model folder {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  file file[] // <-- Add this line

  @@unique([name, userId])
}

model file {
  id           String   @id @default(cuid())
  name         String
  path         String
  cloudinaryId String? // NEW
  type         String? // NEW
  size         Int? // NEW
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  folderId     String
  folder       folder   @relation(fields: [folderId], references: [id])
  userId       String
  user         User     @relation(fields: [userId], references: [id])
}
